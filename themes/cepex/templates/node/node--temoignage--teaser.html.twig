
<article{{ attributes.addClass('temoignage') }}>
  <div class="image-succes-storie">
    <a class="fancybox fancybox-video fancybox-succes" href="{{ content.field_video_temoignage.0 }}" data-fancybox="gallery">
      <i class="fa-solid fa-play"></i>
      <img src="{{ file_url(node.field_image_temoignage.entity.uri.value) }}" class="img-succes" alt="{{ node.field_image_temoignage.alt }}">
    </a>
  </div>
  <div class="contnu-succes-storie">
    <span class="title-succes-storie">
      {{ content.field_titre_temoignage }}
    </span>
    <div class="desc-succes-storie">
      {{ content.field_description }}
    </div>
  </div>
</article>